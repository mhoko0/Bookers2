 <% if @user.errors.any? %>
  <%= @user.errors.count %> error occurred.
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="pt-2">User info</h2>
    <%= form_with(model: @user, local: true) do |f| %>
      <p>Name</p>
      <%= f.text_field :name, class: 'py-1 px-2 btn-block' %>
      <br>
      <br>
      <label for="inputImage">Image</label>
      <br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      <br>
      <br>
      <p>Intoroducrion</p>
      <%= f.text_area :introduction, class: 'py-1 px-2 btn-block' %>
      <br>
      <%= f.submit "Update User", class: 'btn btn-secondary btn-sm' %>
    <% end %>
    <p class="text-center"><br>
    <br>
    CopyRight Infratop.inc
    </p>
  </div>